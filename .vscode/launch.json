{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch ircserv",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/ircserv",
      "args": ["6667", "mdp123"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description":  "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          },
      ],
      "preLaunchTask": "Make",
    },
  ],
}
